{
    "name": "vdhicts/replacer",
    "description": "Package to easily replace values in text for templating purposes.",
    "license": "MIT",
    "authors": [
        {
            "name": "D. van der Heiden",
            "email": "info@vdhicts.nl",
            "homepage": "http://www.vdhicts.nl",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Vdhicts\\Replacer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vdhicts\\Replacer\\Test\\": "tests/"
        }
    },
    "require": {
        "php" : "^7.4|^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "vimeo/psalm": "^4.10"
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "analyse": "vendor/bin/psalm"
    },
    "config": {
        "sort-packages": true
    }
}
